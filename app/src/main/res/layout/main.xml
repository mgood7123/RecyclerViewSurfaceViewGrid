<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonRenderSurfaceViewInsideRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Render SurfaceView Inside RecyclerView"
        app:layout_constraintBottom_toTopOf="@+id/buttonRenderSurfaceViewDirectly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRenderSurfaceViewDirectly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Render SurfaceView Directly"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRenderSurfaceViewInsideRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>